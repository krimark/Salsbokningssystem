@using System.Activities.Statements
@{
    ViewBag.Title = "Projektrum Teknikhögskolan";
}
@section featured {
    <section class="featured">
        <div class="content-wrapper">
            <hgroup class="title">

                <h1>@ViewBag.Title</h1>
                <h2>@ViewBag.Message</h2>
            </hgroup>
            
         
            <p id="maintitle">
                Välkommen till bokningsidan för Teknikhögskolans projektrum.
                Här kan du boka projektrum till din grupp, kom ihåg att respektera
                Teknikhögskolans trivselregler. Ge fan i att kasta snus på tavlan och
                se till att hålla ljudnivån på en lagom nivå, *host* Jean.. *host*..
            </p>
        </div>
    </section>
}
<div>
    @if (TempData["UserMessage"] != null)
    {
        <h4>@TempData["UserMessage"]</h4>  
    }
</div>

<h3>@Html.ActionLink("Boka ny tid", "Book")</h3>

@foreach (var item in Model)
{
    <div>
        <h4>@item.Room.Name</h4>
        <div>Bokad från @item.StartTime till @item.EndTime</div>
        <p>Bokad av @item.User.UserName</p>
        @if (Roles.IsUserInRole("Administratör"))
        {
            @Html.ActionLink("Ta bort bokning", "Remove", "Booking", new {id = item.ID}, null)
        }
        <hr />
    </div>
}
